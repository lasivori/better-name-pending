<head>
	<title>Better Name Pending</title>

	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">

	<link rel="stylesheet" href="/public/styles/bootstrap.min.css">
	<link rel="stylesheet" href="/public/styles/bootstrap-icons.css">
</head>

<body class="bg-dark">
	<nav class="navbar navbar-expand-md navbar-light bg-secondary container-fluid">
		<button class="btn btn-outline-dark btn-lg" type="button" onclick="window.location.href='/'">BNP</button>
		<button class="navbar-toggler" data-bs-toggle="collapse" data-bs-target="#navbar-options">
			<i class="navbar-toggler-icon"></i>
		</button>

		<div class="collapse navbar-collapse" id="navbar-options">
			<ul class="navbar-nav ms-auto">
				<li class="nav-item mx-1">
					<button class="btn btn-outline-dark btn-white" type="button" onclick="window.location.href='/forums'">
						<i class="bi bi-blockquote-left"></i> Forums
					</button>
				</li>

				<li class="nav-item">
					<% if (auth) { %>
					<button class="btn btn-outline-dark btn-primary" type="button" onclick="window.location.href='/profile'">
						<i class="bi"></i> Profile
					</button>
					<% } else { %>
					<button class="btn btn-outline-dark btn-primary" type="button" onclick="window.location.href='/signup'">
						<i class="bi"></i> Sign Up/Login
					</button>
					<% } %>
				</li>
			</ul>
		</div>
	</nav>

	<div class="bg-light container py-2 w-50">
		<h1 class="text-center">Add Game</h1>
		<hr>
		<form action="/addgame" method="POST" enctype="multipart/form-data">
			<ul class="list-unstyled w-100">
				<li class="my-2">
					Game Files: <input type="file" id="gameFilesUpload" name="gamefiles" required>
				</li>
				<li>
					<label for="title">Title: </label>
					<input type="text" name="title" maxlength="50" placeholder="50 character limit" required>
				</li>
				<li class="my-2">
					Main Photo: <input type="file" accept="image/*" id="gameFilesUpload" name="mainphoto" required>
				</li>
				<li class="my-2">
					Additional Photos: <input type="file" accept="image/*" id="gameFilesUpload" name="additional[]" multiple>
				</li>
				<li class="my-2">
					Description:
					<textarea class="w-100" placeholder="Enter description of your game here..." name="desc" required></textarea>
				</li>
				<li class="my-2">
					Short Description: <textarea class="w-100" placeholder="Optional..."></textarea>
				</li>
			</ul>
			<div class="container d-flex position-relative text-center w-100 justify-content-center">
				<button class="mx-2 btn btn-outline-dark btn-danger" type="button" onclick="window.location.href='/games'">Cancel</button>
				<button class="mx-2 btn btn-outline-dark btn-success" type="submit">Submit</button>
			</div>
		</form>

	</div>
</body>